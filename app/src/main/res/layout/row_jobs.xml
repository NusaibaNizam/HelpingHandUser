<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    >
    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIV"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginLeft="5dp"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="3dp"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileIV"
            android:text="Name"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/jobTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileIV"
            android:text="Job"
            android:layout_marginLeft="10dp"
            android:textColor="@color/coloBlack"
            android:textSize="15dp"
            android:layout_below="@id/nameTV"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:id="@+id/preferredLocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileIV"
            android:text="Preferred Location"
            android:layout_marginLeft="10dp"
            android:textColor="@color/coloBlack"
            android:textSize="15dp"
            android:layout_below="@id/jobTV"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:id="@+id/salaryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileIV"
            android:text="Salary"
            android:layout_marginLeft="10dp"
            android:textColor="@color/coloBlack"
            android:textSize="15dp"
            android:layout_below="@id/preferredLocationTV"
            android:layout_marginTop="1dp"
            />
        <TextView
            android:id="@+id/genderTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profileIV"
            android:text="gender"
            android:layout_marginLeft="10dp"
            android:textColor="@color/coloBlack"
            android:textSize="15dp"
            android:layout_below="@id/salaryTV"
            android:layout_marginTop="1dp"
            />
</RelativeLayout>
</android.support.v7.widget.CardView>